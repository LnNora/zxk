/* pages/list/list.wxss */
page{
  height: 100%;
  overflow:hidden;}
.content{
  display: flex;
  flex-direction: row;
  height: 100%;
  margin-top: 80rpx;
  overflow: hidden;
}
scroll-view{
  margin-top: 50rpx;
}
swiper{
  width:76%;
  height: 100%;
}
swiper-item{
  overflow: scroll;
}
.good-item{
  margin-bottom: 40rpx;
}
.good-item image{
  width:140rpx;
  height: 140rpx;
  margin-right: 22rpx;
}
.flex-row.good-item{
  justify-content: flex-start;
}
.flex-column.inner-text{
  justify-content: space-between;
  align-items: flex-start;
}


.tabs{
  height: 100%;
  background-color: #f5f5f5;
  margin-right: 20rpx;
}
.tab{
  width: 100%;
  text-align: center;
  padding: 32rpx 0;
}
.tab.active{
  color: #61ce7c;
  border-left: solid 3px;
  background-color: #fff;
}

/*搜索*/
.search{
  justify-content: flex-start;
  border: solid 1px #e6e6e6;
  width:92%;
  box-sizing: border-box;
  margin: 0 auto;
  padding: 0 30rpx;
  border-radius: 30rpx;
  background-color: #fff;
  
}
.input-placeholder{
  font-size: 23rpx;
  margin-left: 10rpx;
}
.search-wrap{
  width: 100%;
  background-color: #f5f5f5;
  padding: 20rpx 0;
  position: fixed;
  top: 0;
  z-index: 2;
}


