/* pages/list/list.wxss */
page{height: 100%;}
.content{
  display: flex;
  flex-direction: row;
  height: 100%;
}
swiper{
  width:76%;
  height: 100%;
}
swiper-item{
  overflow: scroll;
}
.good-item{
  margin-bottom: 40rpx;
}
.good-item image{
  width:140rpx;
  height: 140rpx;
  margin-right: 22rpx;
}
.flex-row.good-item{
  justify-content: flex-start;
}
.flex-column.inner-text{
  justify-content: space-between;
  align-items: flex-start;
}


.tabs{
  height: 100%;
  background-color: #f5f5f5;
  margin-right: 20rpx;
}
.tab{
  width: 100%;
  text-align: center;
  padding: 32rpx 0;
}
.tab.active{
  color: #61ce7c;
  border-left: solid 3px;
  background-color: #fff;
}

